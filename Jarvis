 <script>





window.onload = function() {
 responsiveVoice.speak(
  "Now me to introduce myself. I am Jarvis .The virtual Artificial intelligence.And I am here to assist you with the variety of tasks is the best i can , twenty four hours a day and seven day in a week.System is now fully operational. welcome back sir. what can i do for you",
  "UK English Male", {
   rate: 1.0,
   volume: 5,
   pitch: 1.0
  });
};

function a() {
 var ans = document
  .getElementById("input").value
  .toLowerCase();
 if (ans.match("hello") || ans
  .match("hi") || ans.match(
   "hii") || ans.match("hey")) {
  b = "hi, how are you?";
 } else if (ans.match(
   "thanks") || ans.match(
   "thank you")) {
  b = "Your most welcome"
 } else if (ans.match(
   "your name") || ans.match(
   "What Is Your name") || ans.match(
   "who r u") || ans.match(
   "who are you")) {
  b = "I am Jarvis.The virtual Artificial intelligence.And I am here to assist you with the variety of tasks is the best i can. ";
 } else if (ans.match(
  "Your owner") ||
  ans.match("created") || ans
  .match("who made you")) {
  b =
   "i was created by Mr. Abhinav Aarya";
 } else if (ans.match(
   "how are you") || ans.match(
   "how r u")) {
  b = "fine,Thanks For Asking and you??";
 } else if (ans.match(
   "how going") || ans.match(" whatsapp")) {
  b = "good";
 } else if (ans.match(
   "where do you live") || ans.match(
   "you live")) {
  b = "in Your Device  And Your Heart'";
 } else if (ans.match(
   "What Are You doing") || ans.match(
   "you doing")) {
  b = "chatting with you";
 } else if (ans.match("fine")) {
  b = "good";
 } else if (ans.match(
   "what do you like") || ans.match(
   "you like")) {
  b = "I like to help you";
 } else if (ans.match(
   "be my friend")) {
  b = "that okay from me";
 } else if (ans.match(
   "whats going on")) {
  b = "i am trying to help you";
 } else if (ans.match(
   "Your hobbies") || ans.match(
   "your hobb")) {
  b = "helping my sir and you";
 } else if (ans.match("good") ||
  ans.match("awesome") || ans
  .match("wonderful") || ans
  .match("outstanding") || ans
  .match("brilliant")) {
  b = "thanks alot";
 } else if (ans.match(
   "what Your age") || ans.match(
   "your age") || ans.match(
   "old are you") || ans.match(
   "old r u")) {
  b = "I am not a human";
 } else if (ans.match("ok") ||
  ans.match("ohk") || ans.match(
   "okay")) {
  b = "enough";
 } else if (ans.match("my") ||
  ans.match("me")) {
  b = "Sorry,I dont know you";
 } else if (ans.match(
   "who is Abhinav")) {
  b =
   "he is my Everything And he only made me";
 } else if (ans.match("bye") ||
  ans.match("see u") || ans
  .match("see you") || ans
  .match(
   "talk to you ") || ans.match(
   "talk to u later")) {
  b = "see you";
 } else if (ans.match(
   "about Urself") || ans.match(
   "about yourself") || ans
  .match("about You") || ans.match("About U")) {
  b =
   "i am JARVIS The intelligent robot. created by abhinav to assist and help him";
 } else if (ans.match(
   "can we meet") || ans.match(
   "v meet") || ans.match(
   "lets meet")) {
  b =
   "okay, lets meet in the computer hard disk";
 } else {
  b =
   "Sorry,I can't understand you";

 };
 responsiveVoice.speak(b,
  "UK English Male", {
   rate: 1.0,
   volume: 1,
   pitch: 1.0
  });
 document.getElementById(
   "input")
  .value = "";
}

 </script>
